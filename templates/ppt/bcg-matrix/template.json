{
  "template_id": "bcg-matrix",
  "name": "BCG Growth-Share Matrix（波士顿矩阵）",
  "category": "strategy-consulting",
  "industry": ["consulting", "business-strategy", "portfolio-analysis"],
  "description": "波士顿咨询公司（BCG）经典战略工具，用于分析业务组合和资源分配决策",
  "use_cases": [
    "企业战略规划",
    "产品组合分析",
    "投资决策",
    "资源配置优化"
  ],
  
  "layout": {
    "type": "2x2_matrix",
    "grid": {
      "rows": 2,
      "cols": 2,
      "gap": 16
    },
    "quadrants": {
      "star": {
        "position": "top-right",
        "label": "明星业务 (Stars)",
        "color": "#10B981",
        "criteria": "高增长率 + 高市场份额",
        "strategy": "加大投资，保持领先地位"
      },
      "cash_cow": {
        "position": "bottom-right",
        "label": "金牛业务 (Cash Cows)",
        "color": "#3B82F6",
        "criteria": "低增长率 + 高市场份额",
        "strategy": "维持现状，榨取现金流"
      },
      "question_mark": {
        "position": "top-left",
        "label": "问题业务 (Question Marks)",
        "color": "#F59E0B",
        "criteria": "高增长率 + 低市场份额",
        "strategy": "选择性投资或撤资"
      },
      "dog": {
        "position": "bottom-left",
        "label": "瘦狗业务 (Dogs)",
        "color": "#EF4444",
        "criteria": "低增长率 + 低市场份额",
        "strategy": "收缩或剥离"
      }
    },
    "axes": {
      "x": {
        "label": "相对市场份额 (Relative Market Share)",
        "range": [0.1, 10],
        "scale": "logarithmic",
        "midpoint": 1.0
      },
      "y": {
        "label": "市场增长率 (Market Growth Rate, %)",
        "range": [0, 30],
        "scale": "linear",
        "midpoint": 10
      }
    }
  },
  
  "data_structure": {
    "business_units": [
      {
        "name": "业务单元名称",
        "market_share": 1.5,
        "growth_rate": 15,
        "revenue": 1000,
        "quadrant": "star"
      }
    ]
  },
  
  "visualization": {
    "bubble_chart": {
      "bubble_size_metric": "revenue",
      "min_bubble_size": 30,
      "max_bubble_size": 120,
      "bubble_opacity": 0.7,
      "show_labels": true,
      "label_position": "center"
    },
    "annotations": {
      "show_quadrant_labels": true,
      "show_strategy_hints": true,
      "show_data_source": true
    }
  },
  
  "required_slides": [
    {
      "order": 1,
      "type": "title",
      "title": "业务组合分析 — BCG矩阵"
    },
    {
      "order": 2,
      "type": "bcg_matrix",
      "title": "当前业务组合定位",
      "content": {
        "matrix_visualization": true,
        "data_table": false
      }
    },
    {
      "order": 3,
      "type": "analysis",
      "title": "战略建议与行动计划",
      "content": {
        "recommendations_by_quadrant": true,
        "resource_allocation": true,
        "timeline": true
      }
    }
  ],
  
  "design_rules": {
    "colors": {
      "primary": ["#10B981", "#3B82F6", "#F59E0B", "#EF4444"],
      "background": "#FFFFFF",
      "grid_lines": "#E5E7EB"
    },
    "typography": {
      "title_font": "Inter",
      "body_font": "Inter",
      "min_label_size": 14
    },
    "accessibility": {
      "ensure_contrast": true,
      "add_pattern_fills": true,
      "include_text_labels": true
    }
  },
  
  "references": [
    "Henderson, B. D. (1970). The Product Portfolio. Boston Consulting Group.",
    "Stern, C. W., & Deimler, M. S. (2006). The Boston Consulting Group on Strategy."
  ]
}
