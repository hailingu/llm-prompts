{
  "template_id": "gantt-chart",
  "name": "Gantt Chart（甘特图）",
  "category": "project-management",
  "industry": ["software", "construction", "manufacturing"],
  "description": "用于项目进度管理的横道图，显示任务时间线、依赖关系和里程碑",
  
  "layout": {
    "type": "timeline",
    "orientation": "horizontal",
    "components": {
      "task_list": {
        "position": "left",
        "width": "30%"
      },
      "timeline_bars": {
        "position": "right",
        "width": "70%"
      }
    }
  },
  
  "data_structure": {
    "project_name": "项目名称",
    "start_date": "2026-01-01",
    "end_date": "2026-06-30",
    "tasks": [
      {
        "id": "task-1",
        "name": "需求分析",
        "start": "2026-01-01",
        "end": "2026-01-15",
        "progress": 100,
        "owner": "产品团队",
        "dependencies": [],
        "milestone": false
      }
    ]
  },
  
  "visualization": {
    "bar_colors": {
      "completed": "#10B981",
      "in_progress": "#3B82F6",
      "not_started": "#E5E7EB"
    },
    "show_progress": true,
    "show_dependencies": true,
    "highlight_critical_path": true,
    "show_today_line": true
  },
  
  "design_rules": {
    "max_tasks_visible": 15,
    "min_bar_height": 20,
    "show_weekends": false
  }
}
