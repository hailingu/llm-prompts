{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PPT Guidelines Schema",
  "type": "object",
  "properties": {
    "presentation_type": {
      "type": "string",
      "enum": ["technical-review", "executive-pitch", "product-roadmap", "academic-report", "fast-paced-talk", "general"],
      "description": "Presentation type determines which philosophy rules to apply"
    },
    "philosophy": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["presentation-zen", "assertion-evidence", "10-20-30-rule", "pyramid-principle", "tufte", "takahashi", "signal-vs-noise"]
      },
      "description": "Design philosophies to apply (can combine multiple)"
    },
    "max_bullets_per_slide": {"type":"integer", "minimum":0},
    "max_lines_per_slide": {"type":"integer", "minimum":1},
    "max_words_per_slide": {"type":"integer", "minimum":1},
    "require_speaker_notes": {"type":"boolean"},
    "min_title_font_pt": {"type":"number", "minimum":8},
    "min_body_font_pt": {"type":"number", "minimum":8},
    "max_text_density_percent": {"type":"number", "minimum":1, "maximum":100},
    "require_decision_slide_within_first_n": {"type":"integer", "minimum":0},
    "require_image_attribution": {"type":"boolean"},
    "require_citation": {"type":"boolean", "description": "Require data source citations (academic/technical mode)"},
    "wcag_contrast_level": {"type":"string", "enum":["AA","AAA"]},
    "min_contrast_ratio": {"type":"number", "minimum":1},
    "qa_pass_threshold": {"type":"number", "minimum":0, "maximum":100},
    "max_slides_for_pitch": {"type":"integer", "minimum":1, "description": "Maximum slide count for pitch/executive presentations"},
    "require_assertion_title": {"type":"boolean", "description": "Titles must be assertion sentences (Assertion-Evidence)"},
    "min_visual_elements_per_slide": {"type":"integer", "minimum":0, "description": "Minimum charts/images per slide"},
    "y_axis_starts_at_zero": {"type":"boolean", "description": "Bar charts must have Y-axis starting at zero (Tufte)"},
    "max_chart_categories": {"type":"integer", "minimum":1, "description": "Maximum categories in pie charts (recommend bar charts if exceeded)"},
    "max_unique_colors": {"type":"integer", "minimum":1, "description": "Maximum unique colors excluding black/white/gray"},
    "max_font_families": {"type":"integer", "minimum":1, "description": "Maximum different font families"},
    "allow_animations": {"type":"boolean", "description": "Allow transition animations and effects"},
    "allow_decorative_elements": {"type":"boolean", "description": "Allow logos/headers/footers on content slides"}
  },
  "required": ["max_bullets_per_slide", "min_title_font_pt", "min_body_font_pt"]
}
